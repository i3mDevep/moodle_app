{{!
    @template block_taggedcoursesearch/courses-view

    This template renders the courses view for the taggedcoursesearch block.

    Example context (json):
    {}
}}
<div id="courses-view-{{uniqid}}" data-region="courses-view">
    {{#hascourses}}
        {{< block_taggedcoursesearch/courses-view-by-status }}
            {{$id}}courses-view-by-tags{{/id}}
            {{$status}}1{{/status}}
            {{$pagingbarid}}pb-taggedcoursesearch{{/pagingbarid}}
            {{$pagingcontentid}}pc-taggedcoursesearch{{/pagingcontentid}}
        {{/ block_taggedcoursesearch/courses-view-by-status }}
    {{/hascourses}}
    {{^hascourses}}
    <div class="justify-content-center text-center mt-5">
        <img class="empty-placeholder-image-lg"
             src="{{urls.nocourses}}"
             alt="{{#str}} nocourses, block_taggedcoursesearch {{/str}}"
             role="presentation">
        <p class="text-muted mt-3">{{#str}} nocourses, block_taggedcoursesearch {{/str}}</p>
    </div>
    {{/hascourses}}
</div>